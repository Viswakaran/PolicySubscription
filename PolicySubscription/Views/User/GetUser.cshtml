@model IEnumerable<WEBREPOSITORY.REPOSITORY.User>

@{
    ViewBag.Title = "GetUser";
}

<h2>GetUser</h2>



@Html.ActionLink("InsertUser ", "InsertUser")
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>

        </th>
        <th>

        </th>
    </tr>



    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.ActionLink("UpdateUser ", "UpdateUser", new { id = item.UserID })
            </td>
            <td>
                @Html.ActionLink("DeleteUser ", "DeleteUser", new { id = item.UserID })
            </td>
        </tr>

    }


</table>